<!--Iteration #2.3: List the drones-->
<div>
    <div>   
        <h2>Available drones</h2>
    </div>
        <a href="/drones/create">Add New</a>
    </div>
</div>
{{#if drones }}
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Propellers</th>
            <th>Max Speed</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each drones as |drone|}}
        <tr>
            <td>{{drone.name}}</td>
            <td>{{drone.propellers}}</td>
            <td>{{drone.maxSpeed}}</td>
        <!--Iteration #4.1: Update the drone-->
            <td><a href="/drones/{{drone.id}}/edit">Modify</a> </td>
        <!--Iteration #5.1: Delete the drone-->
            <td><form action="/drones/{{drone.id}}/delete" method="POST"><button>Delete</button></form></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{else}}
<p>There are no drones</p>
{{/if}}